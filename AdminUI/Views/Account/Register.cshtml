@using Domain.ViewModel.Admin;
@model RegisterAdminVM

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Kayıt Ol";
}

<div class="main">
    <div class="main-content">
        <section class="login">
            <div class="row">
                <div class="col-12">
                    <div class="box">
                        <div class="box-header d-flex justify-content-between">
                            <a href="index.html">
                                <img src="~/images/logo.png" alt="">
                            </a>

                            <div asp-validation-summary="All"></div>

                            <div class="action-reg">
                                <h4 class="fs-30">Kayıt ol</h4>
                                <a href="#">Hemen bir hesap oluştur</a>
                            </div>

                        </div>
                        <div class="line"></div>
                        <div class="box-body">
                            <div class="auth-content my-auto">

                                <form class="mt-5 pt-2" method="post">
                                    <div class="mb-24">
                                        <label class="form-label mb-14">Eposta</label>
                                        <input required type="email" class="form-control" id="Email" name="Email" placeholder="">
                                    </div>
                                    <div class="mb-24">
                                        <label class="form-label mb-14">Kullanıcı adı</label>
                                        <input required type="text" class="form-control" id="Username" name="Username" placeholder="">
                                    </div>
                                    <div class="mb-16">
                                        <div class="d-flex align-items-start">
                                            <div class="flex-grow-1">
                                                <label class="form-label mb-14">Şifre</label>
                                            </div>
                                        </div>

                                        <div class="input-group auth-pass-inputgroup">
                                            <input required min="4" max="16" type="password" class="form-control" name="Password" placeholder="" aria-label="Şifre" aria-describedby="Password-addon">
                                            <button class="btn shadow-none ms-0" type="button" id="Password-addon"><i class="far fa-eye-slash"></i></button>
                                        </div>
                                    </div>
                                    <div class="mb-16">
                                        <div class="d-flex align-items-start">
                                            <div class="flex-grow-1">
                                                <label class="form-label mb-14">Şifre tekrarı</label>
                                            </div>
                                        </div>

                                        <div class="input-group auth-pass-inputgroup">
                                            <input required min="4" max="16" type="password" class="form-control" name="ConfirmPassword" placeholder="" aria-label="Şifre tekrar" aria-describedby="ConfirmPassword-addon">
                                            <button class="btn shadow-none ms-0" type="button" id="ConfirmPassword-addon"><i class="far fa-eye-slash"></i></button>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <button class="btn bg-primary color-white w-100 waves-effect waves-light fs-18 font-w500" type="submit">Kayıt ol</button>
                                    </div>
                                </form>

                                <div class="mt-37 text-center">
                                    <p class="text-muted mb-0 fs-14">Hesabın var mı ? <a href="@Url.Action("Login", "Account")" class="text-primary fw-semibold">  Giriş yap </a> </p>
                                </div>

                                <div class="mt-37 text-center">

                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item">
                                            <a href="javascript:void()" class="social-list-item text-white">
                                                <i class='bx bxl-facebook-square'></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="javascript:void()" class="social-list-item text-white">
                                                <i class='bx bxl-twitter'></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="javascript:void()" class="social-list-item  text-white">
                                                <i class='bx bxl-linkedin-square'></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="javascript:void()" class="social-list-item  text-white">
                                                <i class='bx bxl-google-plus'></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>