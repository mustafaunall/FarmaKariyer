                                                    <a href="@Url.Action("Detail", "Category", new { id = item.Id })" class="body-link stretched-link">@item.Title</a>
                                                </div>
                                                <div class="col-1 col-md-1 d-flex align-items-center mb-1 mb-md-0 text-alternate">
