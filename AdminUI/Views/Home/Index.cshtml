                                                </div>
                                        @if (item.CreatedDate != null)
                                        {
                                                        <div class="col-12 col-md-3 d-flex align-items-center justify-content-md-end mb-1 mb-md-0 text-alternate">@(((DateTime)item.CreatedDate!).ToString("dd/MM/yyyy"))</div>
                                        }
                                            </div>
                                        </div>
                                    </div>
                        }
                    }*@
                </div>
            </div>
        </div>
    </div>

</div>
