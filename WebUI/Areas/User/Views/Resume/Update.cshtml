                                                    }
                                                    else if (Model?.ReferencePharmacyPositions?.ElementAt(i) == "Stajyer")
                                                    {
                                                        <option value="Teknisyen">Teknisyen</option>
                                                        <option value="Stajyer" selected>Stajyer</option>
                                                        <option value="Yardımcı Eczacı">Yardımcı Eczacı</option>
                                                        <option value="İkinci Eczacı">İkinci Eczacı</option>
                                                        <option value="Eczane Temsilcisi">Eczane Temsilcisi</option>
                                                        <option value="Danışman">Danışman</option>
                                                        <option value="Diğer">Diğer</option>
                                                    }
                                                    else if (Model?.ReferencePharmacyPositions?.ElementAt(i) == "Yardımcı Eczacı")
                                                    {
                                                        <option value="Teknisyen">Teknisyen</option>
                                                        <option value="Stajyer">Stajyer</option>
                                                        <option value="Yardımcı Eczacı" selected>Yardımcı Eczacı</option>
                                                        <option value="İkinci Eczacı">İkinci Eczacı</option>
                                                        <option value="Eczane Temsilcisi">Eczane Temsilcisi</option>
                                                        <option value="Danışman">Danışman</option>
                                                        <option value="Diğer">Diğer</option>
                                                    }
                                                    else if (Model?.ReferencePharmacyPositions?.ElementAt(i) == "İkinci Eczacı")
                                                    {
                                                        <option value="Teknisyen">Teknisyen</option>
                                                        <option value="Stajyer">Stajyer</option>
                                                        <option value="Yardımcı Eczacı">Yardımcı Eczacı</option>
                                                        <option value="İkinci Eczacı" selected>İkinci Eczacı</option>
                                                        <option value="Eczane Temsilcisi">Eczane Temsilcisi</option>
                                                        <option value="Danışman">Danışman</option>
                                                        <option value="Diğer">Diğer</option>
                                                    }
                                                    else if (Model?.ReferencePharmacyPositions?.ElementAt(i) == "Eczane Temsilcisi")
                                                    {
