                                                        <option value="Eczane Temsilcisi">Eczane Temsilcisi</option>
                                                        <option value="Danışman" selected>Danışman</option>
                                                        <option value="Diğer">Diğer</option>
                                                    }
                                                    else if (Model?.ReferencePharmacyPositions?.ElementAt(i) == "Diğer")
