                                </div>

                                <div id="textBoxContainera">
                                    <!-- Dinamik olarak eklenen alanlar buraya gelecek -->
                                    @if (Model?.ReferencePharmacyNames != null)
                                    {
                                        for (int i = 0; i < Model?.ReferencePharmacyNames.Count; i++)
