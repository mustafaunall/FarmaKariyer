@using Domain.ViewModel.User;
@model ForgotPasswordVM

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container" style="margin-top:35px;">
    <div class="clearfix"></div>
    <section>
        <div class="row">
            <div class="col-lg-6">
                <div style="display:flex; justify-content:center;align-items:center; padding:15px 0; height:450px;">
                    <img src="~/images/forgotpassword.png" />
                </div>
            </div>
            <div class="col-lg-6" style=" align-items:center;">
                <div style="align-items:center; display:flex; height:380px;">
                    <div class="account-container" style="max-width:450px;">
                        <div class="heading-bx left" style="margin-bottom: 30px;">
                            <h2 class="title-head" style="font-size:34px;">
                                <span style="color:black;">Şifrenizi</span>
                                <span>Sıfırlayın</span>
                            </h2>
                            <p>Şifenizi mi unuttunuz ?</p>
                        </div>
                        <form class="contact-bx" method="post" asp-controller="Account" asp-action="ForgotPassword">
                            <div class="row placeani">
                                <div class="col-lg-12">
                                    <div class="forgotpasswordstyle">
                                        <i class="fa-solid fa-circle-left"></i>
                                        <a href="@Url.Action("LoginUser","Account")">Geri Dön</a>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input asp-for="Email" type="email" placeholder="E-Posta" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m-b30">
                                    @* <input type="hidden" asp-for="UserType" value="0" /> *@
                                    <button type="submit" class="btn button-md" style="padding: 10px 50px;">Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
<style>
    .forgotpasswordstyle i, .forgotpasswordstyle a{
        color:black;
        font-size:20px;
    }

    .forgotpasswordstyle i{
        color: #ff2b58;
        margin-right:5px;
    }
</style>