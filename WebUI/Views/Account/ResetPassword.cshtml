@using Domain.ViewModel.User;
@model LoginUserVM

@{
    ViewData["Title"] = "Şifre Yenile";
}

<div class="container" style="margin-top:35px;">
    <div class="clearfix"></div>
    <section>
        <div class="row">
            <div class="col-lg-6">
                <div style="display:flex; justify-content:center;align-items:center; padding:15px 0; height:450px;">
                    <img src="~/images/forgotpassword.png" />
                </div>
            </div>
            <div class="col-lg-6" style=" align-items:center;">
                <div style="align-items:center; display:flex; height:380px;">
                    <div class="account-container" style="max-width:450px;">
                        <div class="heading-bx left" style="margin-bottom: 30px;">
                            <h2 class="title-head" style="font-size:34px;">
                                <span style="color:black;">Şifrenizi</span>
                                <span>Yenileyin</span>
                            </h2>
                            <p>Hemen şifrenizi yenileyin.</p>
                        </div>
                        <form class="contact-bx" method="post" asp-controller="Account" asp-action="Login">
                            <div class="row placeani">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input name="Password" type="password" class="form-control" placeholder="Şifreniz" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input name="ConfirmPassword" type="password" class="form-control" placeholder="Şifreniz Tekrar" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 m-b30">
                                    <input type="hidden" asp-for="UserType" value="0" />
                                    <button name="submit" type="submit" value="Submit" class="btn button-md" style="padding: 10px 50px;">Onayla</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
<style>
    .forgotpasswordstyle i, .forgotpasswordstyle a {
        color: black;
        font-size: 20px;
    }

    .forgotpasswordstyle i {
        color: #ff2b58;
        margin-right: 5px;
    }
</style>