<section id="project-area" class="latest-project-area grid-with-text" style="padding:20px 0;">
    <div class="container">
        <style>
            .custom-tab {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }

                .custom-tab .nav-item {
                    margin: 0 10px;
                }

            .tab-pane {
                margin-top: 50px;
            }

            .custom-tab .nav-link {
                border: 1px solid #dcdcdc;
                border-radius: 0;
                color: #333;
                transition: 0.3s;
            }

                .custom-tab .nav-link:hover {
                    background-color: #ff2b58;
                    color: white;
                }

            .nav-tabs {
                border-color: #ff2b58 !important;
            }

            .nav-item.active a {
                color: white;
            }

            .nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover {
                background-color: #ff2b58;
                color: white;
            }

            .nav-link{
                font-weight:600;
            }
        </style>
        <div class="custom-tab">
            <!-- Tab Menüsü -->
            <ul class="nav nav-tabs mobilegrid" id="myTabs" role="tablist">
                <li class="nav-item active">
                    <a class="nav-link active" id="technician-tab" data-toggle="tab" href="#technician" role="tab" aria-controls="technician" aria-selected="true" aria-expanded="true">Teknisyen İlanları</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="dermo-tab" data-toggle="tab" href="#dermo" role="tab" aria-controls="dermo" aria-selected="false">Dermokozmetik Elemanı</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="intern-tab" data-toggle="tab" href="#intern" role="tab" aria-controls="intern" aria-selected="false">Stajyer İlanı</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="license-tab" data-toggle="tab" href="#license" role="tab" aria-controls="license" aria-selected="false">Ruhsat İlanları</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="otherads-tab" data-toggle="tab" href="#otherads" role="tab" aria-controls="otherads" aria-selected="false">Diğer İlanlar</a>
                </li>
            </ul>
        </div>
        <!-- Tab İçerikleri -->
        <div class="tab-content" id="myTabContent" style="  overflow:hidden;  height: 515px;">
            <div class="tab-pane fade in active" id="technician" role="tabpanel" aria-labelledby="technician-tab">
