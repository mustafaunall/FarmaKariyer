                <div class="owl-carousel owlitem farmaref" style="margin-top:30px;">
                    @if (Model?.BoostedAdvertsTechnician != null)
                    {
                        foreach (var item in Model.BoostedAdvertsTechnician)
                        {
                            @await Html.PartialAsync("_BoostedAdvertCardPartial", item)
                        }
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="dermo" role="tabpanel" aria-labelledby="dermo-tab">
                @*dermokozmetik elemanı*@
                <div class="owl-carousel owlitem farmaref" style="margin-top:30px;">
                    @if (Model?.BoostedAdvertsDermocosmetic != null)
                    {
                        foreach (var item in Model.BoostedAdvertsDermocosmetic)
                        {
                            @await Html.PartialAsync("_BoostedAdvertCardPartial", item)
                        }
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="intern" role="tabpanel" aria-labelledby="intern-tab">
                @*stajyer ilanları*@
                <div class="owl-carousel owlitem farmaref" style="margin-top:30px;">
                    @if (Model?.BoostedAdvertsIntern != null)
                    {
                        foreach (var item in Model.BoostedAdvertsIntern)
                        {
                            @await Html.PartialAsync("_BoostedAdvertCardPartial", item)
                        }
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="license" role="tabpanel" aria-labelledby="license-tab">
                @*ruhsat ilanları*@
                <div class="owl-carousel owlitem farmaref" style="margin-top:30px;">
                    @if (Model?.BoostedAdvertsLicense != null)
                    {
                        foreach (var item in Model.BoostedAdvertsLicense)
                        {
                            @await Html.PartialAsync("_BoostedAdvertCardPartial", item)
                        }
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="otherads" role="tabpanel" aria-labelledby="otherads-tab">
                @*diğer ilanlar*@
                <div class="owl-carousel owlitem farmaref" style="margin-top:30px;">
                    @if (Model?.BoostedAdvertsOther != null)
                    {
                        foreach (var item in Model.BoostedAdvertsOther)
                        {
                            @await Html.PartialAsync("_BoostedAdvertCardPartial", item)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<section class="video-gallery-area">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="text-holder">
                    <h3>FarmaKariyer Ezcane</h3>
