                </div>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-2 d-flex">
                    <div class="image">
                        <img src="@(Url.Content(UserHelper.UserPhotoOrDefault(user?.PhotoPath)))" style="border:3px solid #ff2b58; border-radius:50%; height:34px; width: 34px;" />
                    </div>
                    <div class="info">
