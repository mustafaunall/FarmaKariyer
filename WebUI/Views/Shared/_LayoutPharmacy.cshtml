@using Core.Helper;
@using Domain.Model;
@using Microsoft.AspNetCore.Identity;

@inject UserManager<ApplicationUser> UserManager

@{
    var u = await UserManager.GetUserAsync(User);
    var user = UserManager.Users.SingleOrDefault(x => x.Email == u.Email);
}

